<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rocky"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/past_launches"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:autoText="false"
            android:onClick="pastLaunch"
            android:text="Past Launches"
            android:textSize="32sp"
            android:visibility="visible"
            android:alpha="0.50"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="118dp" />

        <Button
            android:id="@+id/get_launch"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:onClick="newLaunch"
            android:text="Generate Most Recent Launch"
            android:textSize="32sp"
            android:alpha="0.50"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="45dp" />

        <TextView
            android:id="@+id/openerText"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="All SpaceX launches as of April 29, 2018"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>