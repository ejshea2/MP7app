<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".launch_data"
    tools:showIn="@layout/activity_launch_data">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/launchNumTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Launch Number:"
            android:textColor="#ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/launch_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="#ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/launchDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Launch Date:"
            android:textColor="#ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/launch_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000-00-00"
            android:textColor="#ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|fill_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/spaces2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      "
                    android:textSize="32sp"/>

                <ImageView
                    android:id="@+id/mission_patch"
                    android:layout_width="match_parent"
                    android:layout_height="289dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/spaces2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      "
                    android:textSize="32sp"/>

                <TextView
                    android:id="@+id/rocketName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rocket: "
                    android:textColor="#ffffff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/spaces2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      "
                    android:textSize="32sp"/>

                <TextView
                    android:id="@+id/launchSite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Launch Site:"
                    android:textSize="32sp"
                    android:textColor="#ffffff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/spaces2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      "
                    android:textSize="32sp"/>

                <TextView
                    android:id="@+id/launchResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Launch Result:"
                    android:textColor="#ffffff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/spaces2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      "
                    android:textSize="32sp"/>

                <TextView
                    android:id="@+id/launchDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Launch Details: "
                    android:textColor="#ffffff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/launch_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/spaces2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="      "
                    android:textSize="32sp"/>

                <Button
                    android:id="@+id/video"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:text="Youtube Link" />

                <Button
                    android:id="@+id/article"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:text="Article Link"
                    tools:text="Article Link" />

                <Button
                    android:id="@+id/reddit"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:text="Reddit Campaign" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>